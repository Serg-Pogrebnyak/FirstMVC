@model IEnumerable<TestMVC.ViewModels.CategoriesForDisplayViewModel>
@{
    ViewData["Title"] = "Categories Page";
}

@if (this.User.IsInRole("Admin"))
{
    <form method="get" asp-controller="Categories" asp-action="Create">
        <input class="btn btn-success" type="submit" value="Create new category" />
    </form>
}

<div class="container-fluid">
    <div class="row">
        <div class="col-5">
            sort box
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            filter box
        </div>
        <div class="col-10">
            <div class="row">
                @for (int i = 0; i < @Model.Count(); i++)
                {
                    <div class="col-lg-5 col-xl-4">
                        @await Html.PartialAsync("_CategoryPartialView.cshtml", Model.ToArray()[i])
                    </div>
                }
            </div>
        </div>
    </div>
</div>