@model TestMVC.ViewModels.EditProductViewModel
@{
    ViewData["Title"] = "Edit Product";
}
<form method="Post" asp-controller="Products" asp-action="Edit" enctype="multipart/form-data">
    @Html.Hidden("ReturnURL", Model.ReturnURL)
    @Html.Hidden("Id", Model.Id)
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Name"></label><br />
        <input asp-for="Name" value="@Model.Name"/>
        <span asp-validation-for="Name"></span>
    </div>

    <div>
        <label asp-for="Price"></label><br />
        <input asp-for="Price" value="@Model.Price"/>
        <span asp-validation-for="Price"></span>
    </div>

    <div>
        <label asp-for="Description"></label><br />
        <input asp-for="Description" value="@Model.Description"/>
        <span asp-validation-for="Description"></span>
    </div>

    <div>
        <label asp-for="LongDescription"></label><br />
        <textarea asp-for="LongDescription" class="form-control" text-wrap:normal" type="text" placeholder="Please add Long Description"  value="@Model.LongDescription"></textarea>
        <span asp-validation-for="LongDescription"></span>
    </div>

    <div>
        <label asp-for="Category"></label><br />
        <select id="Category" name="Category">
            @foreach (var categories in ViewBag.Categories)
            {
                <option>
                    @categories.Name
                </option>

            }
        </select>
        <span asp-validation-for="Category"></span>
    </div>

    <div>
        <label asp-for="File"></label><br />
        <input type="file" class="form-control" asp-for="File" />
        <span asp-validation-for="File"></span>
    </div>

    <input class="btn btn-success" type="submit" value="Save Changes" />
</form>