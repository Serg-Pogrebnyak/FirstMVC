@model IEnumerable<TestMVC.ViewModels.ProductForDisplayViewModel>
@{
    ViewData["Title"] = "Products";
}
@if (this.User.IsInRole("Admin"))
{
    <form method="get" asp-controller="Products" asp-action="Create">
        <input class="btn btn-success" type="submit" value="Create" />
    </form>
}
<div class="container-fluid">
    <div class="row">
        <div class="col-7">
            @await Html.PartialAsync("_SortPartialView.cshtml")
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            @await Html.PartialAsync("_FilterPartialView.cshtml")
        </div>
        <div class="col-10">
            <div class="row">
                @for (int i = 0; i < @Model.Count(); i++)
                {
                    <div class="col-lg-5 col-xl-4">
                        @await Html.PartialAsync("_ProductPartialView.cshtml", Model.ToArray()[i])
                    </div>
                }
            </div>
        </div>
    </div>
</div>
