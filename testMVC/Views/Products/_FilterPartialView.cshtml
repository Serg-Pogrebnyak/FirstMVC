@model TestMVC.ViewModels.PaginationProductViewModel

<div class="input-group mb-3">
    <div class="input-group-prepend">
        <span class="input-group-text">₴</span>
    </div>
    @{string priceFrom = null;}
    @if (Model.PriceFrom != 0)
    {
        priceFrom = Model.PriceFrom.ToString();
    }
    <input type="text" class="form-control" placeholder="Price from" name="PriceFrom" value="@priceFrom">
</div>

<div class="input-group mb-3">
    <div class="input-group-prepend">
        <span class="input-group-text">₴</span>
    </div>
    @{string priceTo = null;}
    @if (Model.PriceTo != 0)
    {
        priceTo = Model.PriceTo.ToString();
    }
    <input type="text" class="form-control" placeholder="Price to" name="PriceTo" value="@priceTo">
</div>
