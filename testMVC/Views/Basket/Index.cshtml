@model IEnumerable<TestMVC.ViewModels.ProductInBasketViewModel>
<h3> Your Basket </h3>
<table class="table">
    <tr>
        <th>Product</th>
        <th>Price</th>
        <th>Count</th>
        <th></th>
    </tr>
    @foreach (var product in Model)
    {
        <tr>
            <td> @product.Name</td>
            <td> @product.Price</td>
            <td> @product.Count</td>
            <td>
                <form method="post" asp-controller="Basket" asp-action="Delete">
                    <input type="hidden" name="productId" value=@product.Id />
                    <input class="btn btn-danger" type="submit" value="Remove from basket" />
                </form>
            </td>
        </tr>
    }
    <tr><td colspan="4">Total amount: @ViewBag.TotalAmount</td></tr>

    <tr>
        <td colspan="4">
            <form method="post" asp-controller="Basket" asp-action="MakeOrder">
                <input class="btn btn-success" type="submit" value="Make Order" />
            </form>
        </td>
    </tr>

</table>
